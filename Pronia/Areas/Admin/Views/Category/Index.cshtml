@model List<Category>

@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Catgory Table</h4>

                <div class="table-responsive">
                    <a asp-action="create" class="btn btn-success">Create Category</a>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products Count
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (Category category in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                        @category.Name
                                    </td>
                                    <td>
                                        @category.Products.Count
                                    </td>
                                    <td>
                                        <a class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-primary"><i class="mdi mdi-information-outline"></i></a>
                                    </td>

                                </tr>
                            }
                            
      
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>